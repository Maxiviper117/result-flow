{
    "name": "maxiviper117/result-flow",
    "description": "A minimal Result type with branch-aware chaining for PHP",
    "keywords": [
        "result",
        "result-type",
        "either",
        "monad",
        "functional",
        "error-handling",
        "php"
    ],
    "homepage": "https://github.com/Maxiviper117/result-flow",
    "license": "MIT",
    "authors": [
        {
            "name": "Maxiviper117",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "pestphp/pest": "^3.0",
        "rector/rector": "^2.3",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Maxiviper117\\ResultFlow\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maxiviper117\\ResultFlow\\Laravel\\ResultFlowServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maxiviper117\\ResultFlow\\Tests\\": "tests/"
        },
        "files": [
            "tests/Support/IlluminateSupportStub.php"
        ]
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest --parallel",
        "test-coverage": "php scripts/test-coverage.php",
        "rector": "vendor/bin/rector process",
        "rector-dry": "vendor/bin/rector process --dry-run",
        "format": "vendor/bin/pint",
        "phpstan": "vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
